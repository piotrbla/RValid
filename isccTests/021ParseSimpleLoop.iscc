### DepRel = (W-1 . R) u (W-1 . W) u (R-1 . W) n (OrgSched << OrgSched)

DepRel := ((MustW ^-1 . MayR) + (MustW ^-1 . MustW) + (MustW . MayR^-1)) * (OrgSched << OrgSched);
print DepRel;

NewSched := schedule LD respecting DepRel minimizing DepRel;
print "New schedule:";
print NewSched;
print "New loops:";
codegen NewSched;

